{
    "name": "columba-sdk-js",
    "scripts": {
        "prepare": "tsc --build",
        "build": "tsc --build",
        "build-flock": "buildah unshare ./build-flock-base.sh",
        "clean": "tsc --build --clean",
        "distclean": "rm -fr *~ node_modules store *.log *-lock.json dist",
